{% extends 'base.html.twig' %}

{% block title %}
    Demande de lien de confirmation -
    {{parent()}}
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="container min-h-80">
        <div class="card border-0 col-12 col-md-8 col-lg-6 px-0 mx-auto bg-primary my-4">
            <h1 class="card-header h5 text-white"><em class="fas fa-lock me-2"></em>Renvoyer un lien de confirmation</h1>
            <div class="card-body d-flex flex-column justify-content-center bg-white text-black">
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="small text-muted">
                    <em class="fas fa-info-circle me-1"></em>Entrez l'adresse mail de votre compte qui n'est pas encore activ√© et nous vous enverrons un lien pour l'activer.
                </div>

                <button type="submit" class="btn btn-primary mt-4 ms-auto">Envoyer le mail</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </section>
{% endblock %}
