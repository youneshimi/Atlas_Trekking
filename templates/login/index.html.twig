{% extends 'base.html.twig' %}

{% block title %}
    Connexion -
    {{parent()}}
{% endblock %}

{% block body %}
    <div class="container min-h-80 my-0 mb-6 my-md-5 px-0 mx-0 mx-md-auto">
        <div class="card rounded-none border-0 col-12 col-md-10 col-lg-8 px-0 mx-0 bg-primary mb-5 mx-auto">
            <div class="card-header h5 text-white"><em class="fas fa-lock me-2"></em>Connexion</div>
            <div class="card-body d-flex flex-column justify-content-center bg-white text-black">
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <em class="fas fa-exclamation-circle me-2"></em>{{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" class="d-flex flex-row flex-wrap" method="post">
                    <div class="w-100 mb-2">
                        <em class="fas fa-at me-1"></em> <label for="username" class="form-label required">Adresse mail :</label><br />
                        <input type="text" class="w-100 form-control" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="w-100 mb-2">
                        <em class="fas fa-key me-1"></em> <label for="password" class="form-label required">Mot de passe :</label><br />
                        <input type="password" class="w-100 form-control" id="password" name="_password"/>
                    </div>
                    <a class="small text-muted w-100" href="/inscription"><em class="far fa-question-circle me-1"></em>Je veux m'inscrire</a>
                    <a class="small text-muted w-100" href="/reinitialiser-mot-de-passe"><em class="far fa-question-circle me-1"></em>Mot de passe oubli√© ?</a>
                    <a class="small text-muted w-100" href="/renvoyer-confirmation"><em class="far fa-question-circle me-1"></em>Renvoyer un mail de confirmation ?</a>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-primary mt-4 ms-auto">Connexion</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
